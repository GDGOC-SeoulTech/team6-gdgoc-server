spring:
  datasource:
    # 로컬 개발 환경: 로컬 MySQL 사용
    url: jdbc:mysql://localhost:3306/{DATABASE_NAME}?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: root  # 또는 본인의 MySQL 사용자명
    password: {MYSQL_PASSWORD}  # 본인의 MySQL 비밀번호
    driver-class-name: com.mysql.cj.jdbc.Driver
    
    # 참고: RDS를 사용하려면 아래처럼 변경
    # url: jdbc:mysql://{RDS_HOST}:3306/{DATABASE_NAME}?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    # username: {RDS_USERNAME}
    # password: {RDS_PASSWORD}

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQLDialect

  data:
    redis:
      host: localhost
      port: 6379
      password: # Redis 비밀번호 (없으면 비워두기)

jwt:
  secret-key: {JWT_SECRET_KEY} # Base64로 인코딩된 256bit 이상의 키
  access-expiration-time: 3600000 # 1시간 (밀리초)

